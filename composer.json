{
    "name": "rossriley/docker-bolt",
    "require": {
        "bolt/bolt": "dev-master@dev",
        "composer/composer": "1.0.*@dev",
        "ircmaxell/random-lib": "dev-master@dev",
        "symfony/console": "2.5"
    },
    "authors": [
        {
            "name": "Ross Riley",
            "email": "riley.ross@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,    
    "scripts": {
        "post-install-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ]
    },
    
    "extra":{
        "bolt-web-dir": "./public"
    }
    
    
}
