{
    "name": "rossriley/docker-bolt",
    "require": {
        "bolt/bolt": "dev-master"
    },
    "authors": [
        {
            "name": "Ross Riley",
            "email": "riley.ross@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    
    "scripts": {
        "post-install-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets"
        ]
    },
    
    "extra":{
        "bolt-web-dir": "./public"
    }
    
}
